{
    "manifest_version":  3,
    "name":  "Terms Risk Scanner (Hackathon Demo)",
    "version":  "1.0.0",
    "description":  "Finds Terms/Privacy links and scans them for unusual clauses using a Browser Use Skill.",
    "action":  {
                   "default_title":  "Scan Terms",
                   "default_popup":  "popup.html"
               },
    "permissions":  [
                        "storage",
                        "activeTab",
                        "scripting",
                        "tabs",
                        "downloads"
                    ],
    "host_permissions":  [
                             "https://api.browser-use.com/*",
                             "https://*.browser-use.com/*",
                             "http://*/*",
                             "https://*/*"
                         ],
    "content_scripts":  [
                            {
                                "run_at":  "document_idle",
                                "matches":  [
                                                "\u003call_urls\u003e"
                                            ],
                                "js":  [
                                           "content.js"
                                       ]
                            }
                        ]
}